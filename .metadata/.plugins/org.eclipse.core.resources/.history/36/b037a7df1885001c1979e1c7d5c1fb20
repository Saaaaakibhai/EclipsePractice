package Lab01;

public class Task03 {
            public static void main(String[]args) {
            	double radius = 5.5;
            	double perimeter = 2*radius* Math.PI;
            	double area = Math.pow(radius, 2)*Math.PI;
            	System.out.printf("Perimeter: %.2f",perimeter);
            	System.out.printf("Area: %.2f",area);
            }
}
